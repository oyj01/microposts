<% if current_user.liking?(micropost) %>
  <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Unfavorite', class:'btn btn-danger btn-sm ', style:'margin-left:10px' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Favorite', class:'btn btn-danger btn-sm ', style:'margin-left:10px' %>
  <% end %>
<% end %>